@model LoginViewModel
<head>
    <style>
        input, button {
            outline: none;
        }

        form {
            width: 300px;
            margin: 0 auto;
            text-align: center;
        }

        .block {
            margin-bottom: 10px;
            text-align: left;
            width: 80%;
            margin-left: auto;
            margin-right: auto;
        }

        .header {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .input {
            width: 100%;
            padding: 8px;
            font-size: 14px;
            border-radius: 5px;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        .button {
            padding: 10px 20px;
            font-size: 16px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            width: 100%;
            display: block;
        }

        .switch-button {
            display: block;
            text-decoration: none;
            color: #007bff;
            margin-top: 10px;
            font-size: 16px;
        }

        span {
            color: red;
            font-size: 14px;
        }
    </style>
</head>

<form asp-controller="Auth" asp-action="Login" method="post">
    <input type="hidden" asp-for="ReturnUrl" />

    <div class="header">Login</div>
    <div class="block">
        <label>Email</label>
        <input asp-for="Email" class="input" type="email"/>
        <span asp-validation-for="Email"></span>
    </div>

    <div class="block">
        <label>Password</label>
        <input asp-for="Password" class="input" type="password"/>
        <span asp-validation-for="Password"></span>
    </div>

    <div class="block">
        <button type="submit" class="button">Sign In</button>
    </div>

    <a asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl" class="switch-button">Register</a>
</form>